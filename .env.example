# Google Gemini API Key
# Get yours at: https://aistudio.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key

# ElevenLabs API Key (optional - disables voice feedback if not set)
# Get yours at: https://elevenlabs.io/
VITE_ELEVENLABS_API_KEY=your_elevenlabs_key

# ElevenLabs Voice ID (optional - defaults to "Rachel")
VITE_ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# How often to check work, in seconds (default: 45) — legacy
VITE_CHECK_INTERVAL=45

# Whiteboard: how often to analyze and add a comment log entry, in seconds (default: 8; use 5–10)
VITE_ANALYZE_INTERVAL=20

# --- Firebase (client - prefix with VITE_ so Vite exposes them) ---
# Get these from Firebase Console > Project settings > General > Your apps
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abc

# --- Firebase Admin (server / migration script only) ---
# Path to service account JSON file, or leave empty to use FIREBASE_SERVICE_ACCOUNT_JSON
FIREBASE_SERVICE_ACCOUNT_PATH=
# Or paste the JSON string (for CI / server)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}
FIREBASE_SERVICE_ACCOUNT_JSON=

# Anthropic (optional - for Claude)
VITE_ANTHROPIC_API_KEY=your_anthropic_key

# Server (optional - app works without server when using Firebase)
PORT=3001
JWT_SECRET=dev-secret-change-in-production
